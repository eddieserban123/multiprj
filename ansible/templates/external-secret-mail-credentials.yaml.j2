apiVersion: external-secrets.io/v1alpha1
kind: ExternalSecret
metadata:
  name: {{ prefix }}-mail-credentials
  namespace: {{ namespace_name }}
spec:
  secretStoreRef:
    name: vault-backend
    kind: ClusterSecretStore
  target:
    name: {{ prefix }}-mail-credentials
  data:
    - secretKey: username
      remoteRef:
        key: {{ secrets_environment }}/{{ secrets_namespace }}/mail-credentials
        property: username
    - secretKey: password
      remoteRef:
        key: {{ secrets_environment }}/{{ secrets_namespace }}/mail-credentials
        property: password
